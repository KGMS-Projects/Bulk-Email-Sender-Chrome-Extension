{
  "manifest_version": 3,
  "name": "Bulk Email Sender",
  "version": "1.0",
  "description": "Send bulk emails directly from your Chrome browser - Developed by Mihilayan Sachinthana (KGMS)",
  "author": "Mihilayan Sachinthana (KGMS)",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "*://outlook.live.com/*",
    "*://outlook.office.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bulk Email Sender"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "*://outlook.live.com/*",
        "*://outlook.office.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}